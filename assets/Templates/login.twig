{% extends "main.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="row d-flex flex-row justify-content-center align-items-center login-container">
        <form class="form-signin" action="/login" method="post">
            {% if error %}
            <div class="alert alert-danger ma-3" role="alert">
                <p><b><span class="glyphicon glyphicon-warning-sign"></span> Invalid username or password!</b> Please check your credentials, and try again.</p>
            </div>
            {% endif %}
            <h1 class="h1 mb-3 font-weight-normal">Please sign in</h1>
            <div class="form-group">
                <label for="username" class="sr-only">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>
            </div>
            <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
{% endblock %}
