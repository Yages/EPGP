{% extends "main.twig" %}

{% block title %}CurrentEPGP Standings{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Current EPGP Standings</h1>
    </div>
    <table id="current-epgp-standings" class="table table-striped text-light" style="width:100%;">
        <thead class="text-dark bg-light">
            <tr>
                <th>Character</th>
                <th>Class</th>
                <th>Role</th>
                <th>Guild</th>
                <th>Last Raid</th>
                <th>Effort Points</th>
                <th>Gear Points</th>
                <th>Current Priority</th>
            </tr>
        </thead>
        <tbody>
            {% for character in characters %}
                <tr>
                    <td>{{ character.name }}</td>
                    <td class="{{ character.class|lower }}">{{ character.class }}</td>
                    <td>{{ character.role }}</td>
                    <td>{{ character.guild }}</td>
                    <td>{{ character.lastRaid }}</td>
                    <td>{{ character.ep }}</td>
                    <td>{{ character.gp }}</td>
                    <td class="font-weight-bold">{{ character.pr }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
