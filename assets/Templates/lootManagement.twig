{% extends "main.twig" %}

{% block title %}Loot Management{% endblock %}

{% block content %}
    <div class="page-header">
        <h1><i class="fas fa-coins"></i> Loot Management</h1>
    </div>
    <div class="row">
        <div class="col my-4">
            <form class="form-inline">
                <div class="form-group mr-2">
                    <button id="add-loot" type="button" role="button" class="btn btn-outline-primary"><i class="fas fa-coins"></i> Add Loot Item</button>
                </div>
                {% if locationFilter == 0 and bossFilter == 0 %}
                    <div class="form-group mx-2">
                        <a href="/loot" class="btn btn-outline-success"><i class="fas fa-coins"></i> View All Loot</a>
                    </div>
                {% endif %}
                <div class="form-group mx-2">
                    <label class="sr-only" for="location-filter">Filter By Location</label>
                    <select id="location-filter" class="form-control">
                        <option value="*" {% if locationFilter == 0 %}selected{% endif %}>All Locations</option>
                        {% for location in locations %}
                            <option data-id="{{ location.id }}" value="{{ location.id }}" {% if locationFilter == location.id %}selected{% endif %}>{{ location.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group mx-2">
                    <label class="sr-only" for="boss-filter">Filter By Boss</label>
                    <select id="boss-filter" class="form-control">
                        <option value="*" {% if bossFilter == 0 %}selected{% endif %}>All Bosses</option>
                        {% for boss in bosses %}
                            <option data-id="{{ boss.id }}" value="{{ boss.id }}" {% if bossFilter == boss.id %}selected{% endif %}>{{ boss.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </form>
        </div>
    </div>
    <table id="loot-management" class="table table-striped text-light" style="width:100%;">
        <thead class="text-dark bg-light">
            <tr>
                <th>Item ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Boss</th>
                <th>Slot</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in loot %}
                <tr>
                    <td>{{ loot.getId }}</td>
                    <td>{{ loot.getName }}</td>
                    <td>{{ loot.getLocation }}</td>
                    <td>{{ loot.getBoss|default('Trash') }}</td>
                    <td>{{ loot.getSlot }}</td>
                    <td>
                        <button data-id="{{ loot.getId }}" type="button" data-toggle="tooltip" title="Delete {{ loot.getName }}" class="btn btn-sm btn-outline-danger delete-loot"><i class="fas fa-delete"></i></button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="modal fade" id="loot-confirm-modal" tabindex="-1" role="dialog" aria-labelledby="loot-confirm-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h5 class="modal-title" id="loot-confirm-modal-label">Confirm Deletion</h5>
                    <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-dark"></div>
                <div class="modal-footer bg-dark">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="loot-confirm" type="button" class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
